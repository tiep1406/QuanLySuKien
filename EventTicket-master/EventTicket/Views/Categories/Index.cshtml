@using EventTicket.Entities;
@model List<Category>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Danh sách danh mục";
}

<!-- Page Heading -->

<a href="/admin/categories/create" class="btn btn-info h3 mb-2 ">Tạo mới</a>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách danh mục sự kiện</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered display nowrap" id="dataTable" cellspacing="0" style="width: 100%;">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Ảnh</th>
                        <th>Tên</th>
                        <th>Số sự kiện</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cate in Model)
                    {
                        var temp = cate.Status;
                        <tr>
                            <td>@cate.Id</td>
                            <td><img src="@cate.Image" alt="Avatar" width="100" height="100" /></td>
                            <td>@cate.Name</td>
                            <td>@cate.Events.Count</td>
                            <td>@(temp ? "Hiển thị" : "Ẩn")</td>
                            <td>
                                <a href="/admin/categories/edit/@cate.Id" class="btn btn-success">Sửa</a>
                                <a href="/admin/categories/delete/@cate.Id" class="btn btn-danger">Xoá</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
