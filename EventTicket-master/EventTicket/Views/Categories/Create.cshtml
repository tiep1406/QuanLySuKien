@using EventTicket.Models.Category;
@model CategoryVM;

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Thêm mới danh mục";
}
<a href="/admin/categories" class="btn btn-outline-danger mb-3">Quay lại</a>
<form class="user w-50" action="/admin/categories/create" method="post" enctype="multipart/form-data">
    <div class="form-group ">
        <input asp-for="@Model.Name" class="form-control form-control-user mb-3"
            required placeholder="Tên danh mục" />
        <input asp-for="@Model.Image" />
    </div>
    <div class="mt-3 d-flex justify-content-center">
        <button type="submit" class="btn btn-primary btn-user btn-block">
            Tạo mới
        </button>
    </div>
</form>