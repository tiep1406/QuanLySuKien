@using EventTicket.Entities;
@using EventTicket.Models.Category;
@model CategoryVM;

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chỉnh sửa danh mục";
    var cate = ViewData["cate"] as Category;
}
<a href="/admin/categories" class="btn btn-outline-danger mb-3">Quay lại</a>
<form class="user w-50" action="/admin/categories/edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Id"/>
    <div class="col-sm-12 mb-4">
        <img src="@cate.Image" width="100" height="100" />
    </div>
    <div class="form-group ">
        <input asp-for="@Model.Name" class="form-control form-control-user mb-3"
               required placeholder="Tên danh mục" />
        <input name="Image" type="file" />
    </div>
    <div class="form-group ">
        @{
            var t = Model.Status ? "selected" : "";
            var f = !Model.Status ? "selected" : "";
        }
        <select name="Status" class="form-control">
            <!option @t value="true">Hiển thị</!option>
            <!option @f value="false">Ẩn</!option>
        </select>
    </div>
    <div class="mt-3 d-flex justify-content-center">
        <button type="submit" class="btn btn-primary btn-user btn-block">
            Chỉnh sửa
        </button>
    </div>
</form>