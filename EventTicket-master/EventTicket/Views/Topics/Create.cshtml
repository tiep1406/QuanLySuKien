@using EventTicket.Models.Category;
@model TopicVM;

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Thêm mới chủ đề";
}
<a href="/admin/topics" class="btn btn-outline-danger mb-3">Quay lại</a>
<form class="user w-50" action="/admin/topics/create" method="post">
    <div class="form-group ">
        <input asp-for="@Model.Name" class="form-control form-control-user mb-3"
            required placeholder="Tên chủ đề" />
    </div>
    <div class="mt-3 d-flex justify-content-center">
        <button type="submit" class="btn btn-primary btn-user btn-block">
            Tạo mới
        </button>
    </div>
</form>